@using BlazingApple.Components.Reactions
@using BlazingApple.Forums.Components.Votes
@using BlazingApple.Forums.Shared.Models.Votes

@using static BlazingApple.Forums.Components.Votes.VoteToggle;
<div class="d-flex align-items-center">
	@if (VoteStyle is VoteStyle.VotesOnly or VoteStyle.ReactionsAndVotes) 
	{
		<div class="me-2 d-flex align-items-center">
			<VoteToggle Direction="@VoteToggleDirection.Horizontal" Value="Vote" ValueChanged="OnVoteChanged" />
		</div>
	}
						
	@if (VoteStyle is VoteStyle.ReactionsOnly or VoteStyle.ReactionsAndVotes) 
	{
		<div class="me-2 d-flex align-items-center">
			<ReactionButton AdditionalClasses="btn-sm" Value="Reaction" ValueChanged="OnReactionChanged" Reactions="Reactions" />
		</div>
	}

	<div class="me-2 d-flex align-items-center">
		<button class="btn btn-link btn-sm p-0" type="button" style="line-height:0;" @onclick="OnReplyClicked">
			<i class="fas fa-reply"></i> Reply
		</button>
	</div>
	<div class="me-2 d-flex align-items-center">
		<ShareButton UrlToShare="#" />
	</div>
</div>